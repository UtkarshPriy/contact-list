</head>
<body>
    <h2>Contacts</h2>
    <ul>
        <% for(i of contactlist){%>
            
            <li id = 'cnt'>
                <p id="name"><%=i.name%></p>
                <p id ="number"><%=i.number%></p>
                
            </li>
            <a ID ='dlt' href="/delete-contact/?phone=<%= i.number %>">
                <button type="submit">delete</button>
            </a>
            <%}%>
    </ul>
    <form action="/create-contact" method="post">
        <input name="name" type="text" placeholder="Enter Name" required>
        <input type = 'text' name="number" placeholder="Enter Number" required>
        <button type="submit" id ='btn'>Add Contact</button>
    </form>
    
    <script src="../index.js" ></script>
</body>
</html> 